@model Doit.Models.Meditation

@{
    ViewData["Title"] = "MeditationDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Meditation</h1>

<div>
  
    <hr />
    
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            <div style="width:500px;">
                <div class="alert alert-secondary" role="alert">
                    @Model.Description

                </div>
            </div>
        </dd>

        @if (Model.VideoUrl != null)
        {
            <dt class="col-sm-2">
                Video:
            </dt>


            <dd class="col-sm-10">
                <video width="320" height="240" controls>
                    <source src="~/Uploads/@Model.VideoUrl" type="video/mp4">
                    <source src="~/Uploads/@Model.VideoUrl" type="video/ogg">
                    Your browser does not support the video tag.
                </video>
            </dd>
        }


        @if (Model.AudioUrl != null)
        {
            <dt class="col-sm-2">
                Audio:

            </dt>
            <dd class="col-sm-10">
                <audio controls>
                    <source src="~/Uploads/@Model.AudioUrl" type="audio/mpeg">
                </audio>
            </dd>
        }


    </dl>
</div>
<div>
    <a asp-action="EditMeditation" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
